{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",       // ðŸ‘ˆ change from 'bundler' to 'Node'
    "jsx": "react-jsx",

    "allowJs": true,
    "checkJs": false,

    "strict": true,                   // ðŸ‘ˆ better to turn strict on
    "noImplicitAny": true,

    "skipLibCheck": true,
    "isolatedModules": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,          // ðŸ‘ˆ add this
    "forceConsistentCasingInFileNames": true, 

    "noEmit": true
  },
  "include": ["src"]
}
